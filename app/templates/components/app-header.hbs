<div class="app-header hero">
  <header class="hero-head">
    <nav class="nav">
      <div class="container">
        <div class="nav-left">
          {{#link-to 'landing'
            class="leaf-logo nav-item"
            activeClass="is-active"
            invokeAction=(action 'close')
          }}
            <img
                src="/assets/images/leaf.svg"
                class="leaf-logo__icon"/>
            <span
              class="leaf-logo__text title">
              Leaf CI
            </span>
          {{/link-to}}
        </div>
        <span
          {{action 'toggle'}}
          class="nav-toggle nav-toggle-white {{if isOpened 'is-active'}}">
          <span></span>
          <span></span>
          <span></span>
        </span>
        <div class="nav-right nav-menu {{if isOpened 'is-active'}}">
        {{#link-to 'landing'
            class="nav-item"
            activeClass="is-active"
            invokeAction=(action 'close')
          }}
            Home
          {{/link-to}}
          {{#link-to 'docs'
            class="nav-item"
            activeClass="is-active"
            invokeAction=(action 'close')
          }}
            Docs
          {{/link-to}}
          {{#if true}}
            <span class="nav-item">
              {{#link-to 'docs'
                class="button is-success"
                invokeAction=(action 'close')
              }}
                <span>Sign in with GitHub</span>
                <span class="icon">
                  <i class="fa fa-github"></i>
                </span>
              {{/link-to}}
            </span>
          {{else}}
            {{#link-to 'logout'
              class="nav-item"
              activeClass="is-active"
              invokeAction=(action 'close')
            }}
              Log Out
            {{/link-to}}
          {{/if}}
        </div>
      </div>
    </nav>
  </header>
</div>
